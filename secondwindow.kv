# Second Window

<CreatePasswordClickableTextField>
    create_passw: create_passw
    MDTextField:
        id: create_passw
        password: True
        hint_text: "Password"
        mode: "rectangle"
        font_size: "15dp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: create_passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            create_passw.password = False if create_passw.password is True else True

<ConfirmPasswordClickableTextField>
    confirm_passw: confirm_passw
    MDTextField:
        id: confirm_passw
        password: True
        hint_text: "Confirm Password"
        mode: "rectangle"
        font_size: "15dp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: confirm_passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            confirm_passw.password = False if confirm_passw.password is True else True

<SecondWindow>:
    name: "second"
    create_username: create_username
    create_password: create_password
    confirm_passw: confirm_password
    MDGridLayout:
        cols: 1
        size_hint: 0.5, None
        height: dp(250)
        pos_hint: {'center_x': 0.50, 'center_y': 0.50}
        MDGridLayout:
            spacing: 20
            cols: 1
            size_hint: 0.5, 0.5
            MDTextField:
                id: create_username
                mode: "rectangle"
                hint_text: "Username"
                font_size: "15dp"
            CreatePasswordClickableTextField:
                id: create_password
            ConfirmPasswordClickableTextField
                id: confirm_password
            MDGridLayout:
                cols: 3
                spacing: 20
                MDIconButton:
                    icon: 'arrow-left'
                    on_release:
                        root.clear()
                        app.root.current = "first"
                        root.manager.transition.direction = "right"
                MDFlatButton:
                    text: "Signup"
                    font_name: "RobotoMedium"
                    font_size: "15dp"
                    text_color: "white"
                    theme_text_color: "Custom"
                    size_hint_x: 0.50
                    md_bg_color: [20/255, 20/255, 20/255, 1]
                    on_release:
                        root.signUp()
                    
