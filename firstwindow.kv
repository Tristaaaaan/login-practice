# First Window

<ClickableTextField>
    passw: passw
    MDTextField:
        id: passw
        password: True
        hint_text: "Password"
        mode: "rectangle"
        font_size: "15dp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            passw.password = False if passw.password is True else True
<FirstWindow>:
    name: "first"
    username: username
    password:password
    MDGridLayout:
        cols: 1
        size_hint: 0.5, None
        height: dp(200)
        pos_hint: {'center_x': 0.50, 'center_y': 0.50}
        MDGridLayout:
            spacing: 20
            cols: 1
            size_hint: 0.5, 0.5
            MDTextField:
                id: username
                mode: "rectangle"
                hint_text: "Username"
                font_size: "15dp"
            ClickableTextField:
                id: password
            MDGridLayout:
                cols: 2
                spacing: 20
                MDFlatButton:
                    text: "Login"
                    font_name: "RobotoMedium"
                    font_size: "15dp"
                    text_color: "white"
                    theme_text_color: "Custom"
                    size_hint_x: 0.50
                    md_bg_color: [20/255, 20/255, 20/255, 1]
                    on_release:
                        root.login()
                MDFlatButton:
                    text: "REGISTER"
                    font_name: "RobotoMedium"
                    font_size: "15dp"
                    text_color: "white"
                    theme_text_color: "Custom"
                    size_hint_x: 0.50
                    md_bg_color: [20/255, 20/255, 20/255, 1]
                    on_release:
                        root.clear()
                        app.root.current = "second"
                        root.manager.transition.direction = "left"